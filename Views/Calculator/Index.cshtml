@{
    ViewData["Title"] = "Kalkulator";
}

<div class="calc-wrap">
    <div class="calc">
        <div class="calc-display">
            <div id="history" class="calc-history"></div>
            <input id="screen" class="calc-screen" type="text" value="0" readonly />
        </div>

        <div class="calc-keys">
            <button class="k fn" data-action="clear">C</button>
            <button class="k fn" data-action="backspace">⌫</button>
            <button class="k op" data-op="/">÷</button>
            <button class="k op" data-op="*">×</button>

            <button class="k" data-digit="7">7</button>
            <button class="k" data-digit="8">8</button>
            <button class="k" data-digit="9">9</button>
            <button class="k op" data-op="-">−</button>

            <button class="k" data-digit="4">4</button>
            <button class="k" data-digit="5">5</button>
            <button class="k" data-digit="6">6</button>
            <button class="k op" data-op="+">+</button>

            <button class="k" data-digit="1">1</button>
            <button class="k" data-digit="2">2</button>
            <button class="k" data-digit="3">3</button>
            <button class="k eq" data-action="equals">=</button>

            <button class="k wide" data-digit="0">0</button>
            <button class="k" data-action="dot">.</button>
        </div>
    </div>
</div>

<!-- CSS kalkulatora -->
<environment include="Development">
    <link rel="stylesheet" href="~/css/calculator.css" asp-append-version="true" />
</environment>
<environment exclude="Development">
    <link rel="stylesheet" href="~/css/calculator.min.css" asp-append-version="true" />
</environment>

@section Scripts {
    <environment include="Development">
        <script src="~/js/calculator.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/calculator.min.js" asp-append-version="true"></script>
    </environment>
}
